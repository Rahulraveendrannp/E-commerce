<%- include('../layouts/header') %>

<div class="container">
  <div class="line-break text-center py-4">
    <span class="shadow-heading">OTP Verification</span>
  </div>
  <div class="row mb-5 pt-4">
    <span class="text-center pb-3" style="font-size: 0.8rem; text-transform: none;color: rgb(223, 226, 33);" >
        Enter the OTP sent to your email
        <p class="text-danger mt-0 pt-4 fw-bold text-uppercase"><%= locals.errorMessage %></p>
    </span>
    
    <div class="col-lg-5 mx-auto">        
      <!-- <form action="/user/otp_verification" method="post"> -->
        <form action="" method="post">
        <div class="mb-3">
          <input
            type="number"
            class="form-control"
            id="form-holder"
            placeholder="OTP"
            name="otp"
          />
        </div>
        <input type="submit" class="btn btn-primary w-100" value="Sign Up" />
      </form>
    </div>
    <span class="text-center py-3" style="font-size: 0.8rem; text-transform: none;color:rgb(172, 166, 166)" id="counter">
      Resend OTP in <span id="countdowntimer"> 60 </span> Seconds    
  </span>
  <% if(newUserDetails!=null) { %>    
  <span class="text-center py-3" style="font-size: 0.8rem; text-transform: none;color:rgb(172, 166, 166)" id="resendotp1">
  </span>
  <% }else { %>    
    <span class="text-center py-3" style="font-size: 0.8rem; text-transform: none;color:rgb(172, 166, 166)" id="resendotp2">
    </span><%  } %> 
  </div>
</div>
<script>

var timeleft = 60;
 const downloadTimer = setInterval(function(){
  timeleft--;
 

 document.getElementById("countdowntimer").textContent=timeleft;
 if(timeleft<=0){
  clearInterval(downloadTimer)
  $("#counter").prop("hidden", true);
    $("#resendotp2").html(
      ' <a href="/users/forgotPassword/otpVerification/resend_OTP" >RESEND OTP</a>'
    );
    $("#resendotp1").html(
      ' <a href="/users/signUp/resend_OTP" >RESEND OTP</a>'
    );
 }},1000)

</script>
<%- include('../layouts/footer') %>
