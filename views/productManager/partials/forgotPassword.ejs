<%- include('../layouts/header') %>

<div style="width: 100%;height: 68vh;background-image: url('	https://cdn.pixabay.com/photo/2016/11/19/11/33/footwear-1838767_960_720.jpg');background-repeat: no-repeat;background-size: cover;">
<div class="container">
  <div class="line-break text-center py-4">
    <span class="shadow-heading">Reset Password</span>
  </div>
  <div class="row mb-5 pt-4">
    <span class="text-center pb-3" style="font-size: 0.8rem; text-transform: none;">
        <p class="text-danger mt-0 pt-4 fw-bold text-uppercase"><%= locals.errorMessage %></p>
    </span>
    
    <div class="col-lg-5 mx-auto">        
      <form action="" method="post">
        <div class="mb-3">
          <input
          pattern="^(([-\w\d]+)(\.[-\w\d]+)*@([-\w\d]+)(\.[-\w\d]+)*(\.([a-zA-Z]{2,5}|[\d]{1,3})){1,2})$"
            required
            class="form-control"
            id="form-holder"
            placeholder="Enter your email"
            name="email"
          />
        </div>
        <input type="submit" class="btn btn-primary w-100" value="Send OTP" />
      </form>
    </div>
    
  </div>
</div>
</div>

<%- include('../layouts/footer') %>
